<h1><%= @user_type.to_s.pluralize.capitalize %></h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', eval("edit_#{user.type.to_s.downcase}_path(user)")%></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br><br><br>
<%= link_to "New #{@user_type}", eval("new_#{@user_type}_path"), class: "btn btn-large btn-primary" %>
<%= will_paginate %>

